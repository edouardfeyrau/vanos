<div class="form border shadow-sm">
  <%= simple_form_for [@van, @booking], data: { controller: "flatpickr" } do |b|%>
    <%= b.input :start_date, as: :string, required: false, placeholder: "Enter your departure date", input_html: {class: "datepickr"} %>
    <%= b.input :end_date, as: :string, required: false, placeholder: "Enter your return date",input_html: {class: "datepickr"} %>
    <%= b.submit "Book #{@van.title}", class:"w-100 btn btn-primary text-light" %>
  <% end %>
</div>
