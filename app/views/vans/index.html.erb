<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12">
    <div>
      <h1 class="text-primary fs-1 fw-bold text-center mb-4"><%= @vans.length %> vans to search the world</h1>
    </div>
      <%= render "/partials/filter"%>

    <div class="grid">
      <% @vans.each do |van| %>
        <%= link_to van_path(van), class: 'text-decoration-none' do %>
          <%= render 'partials/card', van: van %>
        <% end %>
      <% end %>
    </div>
    </div>
    </div>
  </div>
</div>
